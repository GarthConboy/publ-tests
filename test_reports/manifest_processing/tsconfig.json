{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2017",
        "lib": ["es7","dom"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "common/js",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "common/ts/types/*"
            ]
        }
    },
    "typesRoots": [
        "./typings",
        "../node_modules/@types"
    ],
    "include": [
        "common/ts/**/*",
    ],
    "exclude": [
        "common/js/**/*"
    ]
}
